@model X.PagedList.IPagedList<StockProject.Models.Empleados>
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@{
    ViewData["Title"] = "Empleados";
}





<div class="container rounded mt-5 bg-white p-md-5">
    <div class="h2 font-weight-bold">Empleados</div>
    <div class="table-responsive">
        <table id="table_employee" class="table">
            <thead>
                <tr>
                    <th scope="col">No. Empleado</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Area</th>
                    <th scope="col">Fecha agregado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var empleado in Model)
                {
                   
                <tr class="bg-blue">
                    <td class="pt-2">
                        <img id="employee_img" src="~/images/employee_img.png" class="rounded-circle" alt="">
                        <div class="pl-lg-5 pl-md-3 pl-1 name">@empleado.No_empleado</div>
                    </td>
                    <td class="pt-3 mt-1">@empleado.Nombre_empleado</td>
                    <td class="pt-3">@empleado.Area_trabajo</td>
                    <td class="pt-3">@empleado.Date_added</td>
                   
                </tr>
                    <tr id="spacing-row">
                        <td class="pt-3"><span class="fa-solid fa-cube fa-lg btn"></span></td>
                        <td class="pt-3"><span class="fa fa-pen-to-square fa-lg btn"></span></td>
                        <td class="pt-3"><span class="fa fa-ellipsis-v fa-lg btn"></span></td>
                        <td class="pt-3"><span class="fa-regular fa-circle fa-lg btn"></span></td>
                </tr>
                <tr id="spacing-row">
                    <td></td>
                </tr>
               }
               
            </tbody>
        </table>
    </div>
</div>


<div class="pagedList">
    <p>Pagina @Model.PageNumber de @Model.PageCount</p>
    @Html.PagedListPager(Model, page => Url.Action("Empleados", "Empleados", new { page, search = ViewBag.search }),
    new
    PagedListRenderOptions{
    DisplayLinkToIndividualPages = true,
    DisplayPageCountAndCurrentLocation = false,
    MaximumPageNumbersToDisplay = 5,
    LiElementClasses = new string[] { "page-item" },
    PageClasses = new string[] { "page-link" },
    })
</div>